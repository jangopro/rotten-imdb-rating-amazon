{
    "manifest_version": 2,
    "name": "Rotten & IMDb ratings for Amazon",
    "description": "This extension shows Rotten Tomatoes and IMDb ratings on Amazon pages",
    "version": "1.1",
    "icons": { 
        "16": "icon16.png",
        "48": "icon48.png",
       "128": "icon128.png" 
    },
 
    "content_scripts": [
        {
            "matches": ["*://*.amazon.com/*", "*://*.amazon.co.uk/*", "*://*.amazon.ca/*"],
            "css": ["content.css"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        "images/*.png"
    ]
}