{
    "manifest_version": 2,
    "name": "Rotten Tomatoes ratings for Amazon",
    "description": "This extension shows RT ratings on Amazon pages",
    "version": "1.0",
 
    "content_scripts": [
        {
            "matches": ["*://*.amazon.com/*", "*://*.amazon.co.uk/*", "*://*.amazon.ca/*"],
            "css": ["content.css"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
        "images/*.png"
    ]
}